{
    "name": "outsanity/ip-analysis",
    "description": "Library for analyzing IP addresses",
    "type": "library",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Doug Harple",
            "email": "dharple@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.3|^8.0.0",
        "symfony/http-foundation": ">=3.4"
    },
    "require-dev": {
        "outsanity/phpcs": "*",
        "phpstan/phpstan": "^0.12.5",
        "phpunit/php-code-coverage": "^7.0",
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/serializer": ">=4.2"
    },
    "suggest": {
        "symfony/serializer": "Serialization support for SpecialAddressBlock"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Outsanity\\IpAnalysis\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Outsanity\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcbf":  "phpcbf",
        "phpcs":   "phpcs",
        "phpstan": "phpstan analyse",
        "test":    "phpunit"
    }
}
